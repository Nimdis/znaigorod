<%= simple_form_for @affiche, as: :affiche, url: my_affiche_path(@affiche.id) do |f| %>
  <%= hidden_field_tag :step, @step %>
  <%= f.input :poster_image %>
  <%= f.error :poster_image_content_type %>
  <% if @affiche.poster_image.exists? %>
    <%= image_tag resized_image_url(@affiche.poster_image_url, 500, 500, false) %>
  <% end %>
  <div class='submit'>
    <%= f.submit %>
  </div>
<% end %>

