<li>
  <% if affiche.title.present? %>
    <%= link_to affiche, affiche %>
  <% else %>
    <%= link_to 'Нет названия', affiche %>
  <% end %>

  <% if defined?(editable) %>
    <%= link_to 'Редактировать', my_affiche_path(affiche) %>
  <% end %>

  <% if defined?(deletable) %>
    <%= link_to 'Удалить', my_affiche_path(affiche), method: :delete, confirm: 'Вы уверены что хотите удалить?' %>
  <% end %>
</li>
