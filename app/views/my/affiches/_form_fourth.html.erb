<div class="upload_wrapper">
  <script id="template-upload" type="text/x-tmpl">
    <div class="upload">
      {%=o.name%}
      <div class="progress"><div class="bar" style="width: 0%"></div></div>
    </div>
  </script>
</div>

<ul class="gallery_images">
  <%= render @affiche.gallery_images %>
</ul>
<%= link_to 'Удалить все фотографии', destroy_all_my_affiche_gallery_images_path(@affiche.id), :method => :delete, :confirm => 'Вы уверены, что хотите удалить все фотографии для этой афиши?' if @affiche.gallery_images.many? %>

<%= simple_form_for @affiche.gallery_images.new, :url => my_affiche_gallery_images_path(@affiche.id), :html => { :multipart => true, :class => 'file_upload' } do |f| %>
  <%= f.input :file, :input_html => { :multiple => true, :name => 'gallery_images[file]' }, :label => t('my.add_images') %>
<% end %>

<ul class="gallery_files">
  <%= render @affiche.gallery_files %>
</ul>
<%= link_to 'Удалить все файлы', destroy_all_my_affiche_gallery_files_path(@affiche.id), :method => :delete, :confirm => 'Вы уверены, что хотите удалить все вложения для этой афиши?' if @affiche.gallery_files.many? %>

<%= simple_form_for @affiche.gallery_files.new, :url => my_affiche_gallery_files_path(@affiche.id), :html => { :multipart => true, :class => 'file_upload' } do |f| %>
  <%= f.input :file, :input_html => { :multiple => true, :name => 'gallery_files[file]' }, :label => t('my.add_files') %>
<% end %>
