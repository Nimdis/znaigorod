<div class='content_wrapper'>
  <h1><%= t("my.affiche") %></h1>

  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>

  <div class='my_affiche_wrapper'>
    <h2>Черновики<h2>
    <ul>
      <% current_user.affiches.draft.each do |affiche| %>
        <%= render :partial => 'affiches_list', :locals => { :affiche => affiche, :editable => true, :deletable => true } %>
      <% end %>
    </ul>
    <h2>На модерации<h2>
    <ul>
      <% current_user.affiches.pending.each do |affiche| %>
        <%= render :partial => 'affiches_list', :locals => { :affiche => affiche } %>
      <% end %>
    </ul>
    <h2>Опубликованы<h2>
    <ul>
      <% current_user.affiches.published.each do |affiche| %>
        <%= render :partial => 'affiches_list', :locals => { :affiche => affiche, :editable => true } %>
      <% end %>
    </ul>
    <%= link_to 'Добавить мероприятие', new_my_affiche_path %>
  </div>
</div>
