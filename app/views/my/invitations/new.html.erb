<%= simple_form_for [:my, @invitation], :remote => true do |f| %>
  <%= f.input :kind, :as => :hidden %>

  <%= f.input :gender, :include_blank => false %>
  <%= f.input :category_list, :as => :check_boxes, :collection => f.object.available_categories, :checked => f.object.categories %>
  <%= f.input :description %>

  <%= f.submit 'Сохранить' %>
<% end %>
