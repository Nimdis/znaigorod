<div class="messages header">
  Сообщения
</div>

<div id="messages_filter">
  <ul>
    <li><%= link_to t('dialogs', count: @dialogs.count), '#dialogs' %></li>
    <li><%= link_to t('notifications', count: @notification_messages.unread.count), '#notifications' %></li>
  </ul>

  <div id="dialogs">
    <%= render partial: 'my/dialogs/messages', locals: { collection: @dialogs } %>
  </div>

  <div id="notifications" class="list">
    <%= render partial: 'my/messages/messages', locals: { collection: @notification_messages } %>
  </div>
</div>
