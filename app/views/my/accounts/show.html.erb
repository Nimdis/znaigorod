<div class="account_show">
  <div class="left">
    <div class="image">
      <%= image_tag(resized_image_url(@account.avatar.url, 200, 200), size: '200x200', title: @account.title, alt: @account.title) %>
    </div>
    <h1><%= @account.title %></h1>

    <div class="social_actions">
      <% if @account.friends.approved.any? %>
        <div class="friends_counter">
          <div class="floatl">Друзья</div>
          <div class="floatr"><%= link_to t('account_friends', count: @account.friends.count), account_buddies_path(@account) , remote: true %></div>
        </div>
        <%= render partial: 'accounts/friends', locals: { friends: @account.buddies } %>
      <% end %>
    </div>
  </div>

  <div class="right">
    <%= render 'messages' if @account.messages.any? %>
    <%= render 'votes'    if @account.votes.afisha.any? %>
    <%= render 'events'   if @account.afisha.published.any? %>
    <%= render 'comments' if @account.comments.any? %>
  </div>
</div>
