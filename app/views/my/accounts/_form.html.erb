<%= simple_form_for @account, as: :account, url: my_account_path do |f| %>
  <div class="properties_place">
    <div class="line">
      <span>Пол</span>
      <%= f.input :gender, label: false, as: :select, include_blank: false %>
    </div>
    <div class="line">
      <span>Дата рождения</span>
      <%= f.input :birthday, label: false, as: :date_picker, start_year: Date.today.year - 90,
                             end_year: Date.today.year, order: [:day, :month, :year] %>
    </div>
  </div>
  <div class="button_place">
    <%= f.submit 'Сохранить', class: :properties_submit %>
  </div>
<% end %>

