<li class="ajax_message_status <%= message.state %> message_<%= message.id %>"
  data-counter="<%= current_user.account.messages.unread.count %>"
  data-messages="<%= current_user.account.messages.count %>"
  data-account_id="<%= message.account_id %>"
  data-notification_counter="<%= current_user.account.notification_messages.unread.count %>"
  data-dialog_counter="<%= current_user.account.private_messages.unread.count %>"
  data-invite_counter="<%= current_user.account.invite_messages.unread.count %>">

  <%= render partial: 'my/messages/afisha_message', locals: { message: message } if message.messageable.is_a?(Afisha) %>
  <%= render partial: 'my/messages/comment_message', locals: { message: message } if message.messageable.is_a?(Comment) %>
  <%= render partial: 'my/messages/friend_message', locals: { message: message } if message.messageable.is_a?(Friend) %>
  <%= render partial: 'my/messages/visit_message', locals: { message: message } if message.messageable.is_a?(Visit) %>
  <%= render partial: 'my/messages/vote_message', locals: { message: message } if message.messageable.is_a?(Vote) %>
  <%= render partial: 'my/messages/invite_message', locals: { message: message } if message.messageable.is_a?(InviteMessage) %>

  <%= link_to 'read', change_status_my_notification_message_path(message), method: :put, remote: true, class: "change_message_status #{message.state}" %>
</li>
