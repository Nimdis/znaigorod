<li class='ajaxed_item comment_form'>
  <% unless user_signed_in? %>
    <p>Оставлять комментарии могут только зарегистрированные пользователи. Пожалуйста, войдите с помощью одной из социальных сетей:</p>
    <%= render :partial => "commons/social_auth" %>
  <% end %>
  <% if current_user %>
    <%= link_to account_path(current_user.account) do %>
      <%= image_tag(resized_image_url(current_user.account.avatar.url, 35, 35), size: '35x35', title: current_user.name, alt: current_user.name, class: :avatar) %>
    <% end %>

    <% if current_user.profile %>
      <%= link_to current_user.name, current_user.account, :target => '_blank', :class => 'profile_link' %>
    <% else %>
      <span class='profile_link'><%= current_user.name %></span>
    <% end %>
  <% else %>
    <%= image_tag 'public/default_comment_avatar.png', :class => 'avatar', :title => 'неизвестный автор' %>
    <span class="profile_link">Неизвестный автор</span>
  <% end %>
  <%= simple_form_for [association_chain, @comment].flatten, :url => polymorphic_url([association_chain, @comment].flatten), :html => { :remote => true } do |f| %>
    <%= f.input :parent_id, :as => :hidden %>
    <%= f.input :body, :as => :text, :label => false, :placeholder => 'Текст вашего комментария...' %>
    <div class="buttons">
      <%= f.submit "Отправить" %>
      <%= link_to 'Отмена', '#', :class => 'cancel' %>
    </div>
  <% end %>
</li>
