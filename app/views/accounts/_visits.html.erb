<ul>
  <%= render partial: 'visits/account_visits', locals: { collection: @visits } %>
</ul>

<div class="pagination">
  <%= link_to '&uarr;'.html_safe, '#', :class => "toggler #{ 'disabled' if @visits.first_page? }" %>
  <%= link_to '&darr;'.html_safe, account_visits_path(@account, :page => @visits.current_page + 1), :remote => true, :class => "next_page #{ 'disabled' if @visits.last_page? }" %>
</div>

