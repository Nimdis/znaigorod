<li>
  <div class="item">
    <div class="poster">
      <% if vote.voteable.poster_url? %>
        <%= image_tag(resized_image_url(vote.voteable.poster_url, 65, 88), size: '65x88') %>
      <% else %>
        <%= image_tag 'public/stub_poster.png', size: '65x88' %>
      <% end %>
    </div>
    <div class="title">
      <%= link_to vote.voteable.title, afisha_show_path(vote.voteable) %>
    </div>
    <div class="kind">
      <%= vote.voteable.kind.map(&:text).join(', ') %>
    </div>
  </div>
</li>
