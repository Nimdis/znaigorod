<ul class='accounts_list'>
  <% @users.each do |user| %>
    <li>
      <div class='avatar'>
        <%= link_to user.account do %>
          <%= image_tag(resized_image_url(user.account.avatar.url, 70, 70), :size => '70x70', :title => user.account, :alt => user.account) %>
        <% end %>
      </div>
      <div class='details'>
        <%= link_to(user.account, user.account, :class => :name) %>
        <div class="wanted">
          <%= render partial: 'invites/link', locals: { user: user } if @acts_as %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @users %>
