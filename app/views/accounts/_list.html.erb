<ul>
  <% @users.each do |user| %>
    <li>
      <div class='avatar'>
        <%= link_to(image_tag(user.account.avatar.url, :size => '70x70', :title => user.account, :alt => user.account), user.account) %>
      </div>
      <div class='details'>
        <%= link_to(user.account, user.account, :class => :name) %>
        <div class="wanted">
          <%= render partial: 'invites/link', locals: { user: user } if @acts_as %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @users %>
