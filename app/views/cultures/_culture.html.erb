<div class='suborganization_info culture'>

  <div class='title'><%= culture.title.text_gilensize %></div>

  <%= culture.htmlise_offers_and_features_on_show %>

  <%= content_tag :div, culture.description.as_html, :class => :description if culture.description.present? %>

  <% if culture.has_photogallery? %>
    <div class='photogallery'>
      <ul>
        <%= render culture.gallery_images, :rel => "culture_gallery_#{culture.id}" %>
      </ul>
    </div>
  <% end %>

</div>
