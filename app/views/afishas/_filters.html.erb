<div class="filters_wrapper">
  <div class='filters'>
    <div class='by_date'>
      <ul>
        <% @presenter.period_filter.available_period_values.each do |period_value| %>
          <li<%= " class=selected" if @presenter.period_filter.period == period_value %>>
            <%= link_to t("afisha_periods.#{period_value}"),
            send("#{@presenter.url}_index_path", (@presenter.period_filter.period == period_value ? nil : {:period => period_value})) %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='by_tickets'>
      <ul>
        <li><a href='#'>Только с билетами</a></li>
      </ul>
    </div>
  </div>

  <div class='filters'>
    <div class='by_kind'>
      <ul>
        <% @presenter.categories_links.each do |category_link| %>
          <li class='<%= category_link[:parameters][:category] %><%= ' selected' if category_link[:current] %>'>
            <%= link_to send("#{category_link[:parameters].delete(:category)}_index_path", category_link[:parameters]) do %>
              <%= content_tag :span,  category_link[:title], class: :name %>
              <%= content_tag :span, category_link[:count], class: :count  %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
