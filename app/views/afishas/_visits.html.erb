<div class='visitors list'>

  <ul class='avatars'>
    <% @visits.each do |visit| %>
      <%= render partial: 'visits/visitor', locals: { visit: visit } %>
    <% end %>
  </ul>

  <% unless @visits.first_page? && @visits.last_page? %>
    <div class="pagination">
      <%= link_to '&uarr;'.html_safe, '#', :class => "toggler #{ 'disabled' if @visits.first_page? }" %>
      <%= link_to '&darr;'.html_safe, afisha_visits_path(@afisha, :page => @visits.current_page + 1), :class => "next_page #{ 'disabled' if @visits.last_page? }" %>
    </div>
  <% end %>

</div>
