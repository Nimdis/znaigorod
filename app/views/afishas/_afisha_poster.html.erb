<div class='item'>
  <div class='title'><%= afisha.truncated_title_link(25, separator: '') %></div>
  <div class='image'>
    <% if afisha.has_tickets_for_sale? %>
      <div class='has_items_for_sale' title='У нас вы можете купить билеты на мероприятие со скидкой!'>
        Скидка на билет <%= afisha.max_tickets_discount %>%
      </div>
    <% end %>
    <%= afisha.poster_with_link(178, 240) %>
    <%= content_tag(:div, 'Премьера недели', class: :ribbon) if afisha.premiere? %>
    <%= link_to afisha_show_path(afisha), class: :details do %>
      <% if afisha.has_tickets_for_sale? %>
        <span class='for_sale'>Купить билет</span>
      <% end %>
      <span class='first_line'>
        <span class='to_go'>15</span>
        <span class='wait_invite'>3</span>
        <span class='comments'>5</span>
      </span>
      <span class='second_line'>
        <span class='likes'>123</span>
        <span class='visits'>515</span>
        <span class='minimal_age'>12+</span>
      </span>
    <% end %>
  </div>
  <div class='place'><%= afisha.afisha_place(23, nil) %></div>
  <div class='human_when'><%= afisha.human_when ? afisha.human_when : "&nbsp;".html_safe %></div>
  <%#= content_tag :div, "#{afisha.age_min.to_i}+", class: :age if afisha.age_min.present? %>
</div>
