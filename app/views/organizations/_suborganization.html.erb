<%= content_tag :div, suborganization.logo_link, :class => "image" unless suborganization.logo_link.blank? %>

<div class="info">

  <div class="head">
    <h2><%= suborganization.truncated_title_link %></h2>
    <div class="right">
      <%= suborganization.decorated_phones %>
      <%= suborganization.schedule_today %>
      <%= content_tag :div, suborganization.address_link, :class => "place" unless suborganization.address_link.blank? %>
    </div>
  </div>

  <% if suborganization.organization.sms_claimable? %>
    <ul class='sms_claims'>
    <% suborganization.organization.claimable_suborganizations.each do |suborganization| %>
      <li>
        <%= link_to t("sms_claim.#{suborganization.class.name.underscore}.link_title"), send("new_#{suborganization.class.name.underscore}_sms_claim_path", suborganization) %>
      </li>
    <% end %>
    </ul>
  <% end %>

  <div class="rating" style='margin: 5px 10px;'>
    <%= render :partial => 'user_ratings/current_rating', :locals => { :parent_obj => suborganization.organization } %>
  </div>

  <ul class="categories">
    <% suborganization.category_links.each do |category_link| %>
      <li><%= category_link %></li>
    <% end %>
  </ul>
</div>
