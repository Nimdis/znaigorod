<div>
  <%= form_tag [:manage, resource_class.name.underscore.pluralize], :method => :get, :class => 'search_ticket_infos' do %>
    <%= text_field_tag 'q', params[:q] %>
    <%= hidden_field_tag 'type', @klass %>

    <ul>
      <li>
        <%= radio_button_tag :category, '', @category == nil, :id => 'category_all' %>
        <%= label_tag 'category_all', "Все (#{@klass.count})" %>
      </li>
      <% Organization.available_suborganization_kinds.each do |kind| %>
        <li>
          <%= radio_button_tag :category, kind, @category == kind, :id => "category_#{kind}" %>
          <%= label_tag "category_#{kind}", "#{kind} (#{@klass.search { with :suborganizations_kind, kind }.results.count})"  %>
        </li>
      <% end %>
    </ul>

    <%= submit_tag 'Найти' %>
  <% end %>
</div>

