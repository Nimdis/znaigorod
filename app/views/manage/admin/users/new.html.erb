<%= form_for(@user, :url => manage_admin_users_path, :method => :post ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :uid, I18n.t("uid") %><br />
    <%= f.text_field :uid %>
  </div>

  <div class="field">
    <%= f.label :roles, I18n.t("manage.admin.roles") %><br />
    <%= f.select :roles, User::FIELDS, { :prompt => "Please select"}, { :multiple => true, :size => 5 } %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t("save") %>
  </div>
<% end %>
