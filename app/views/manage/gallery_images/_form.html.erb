<% if f.object.file.exists? %>
  <%= link_to 'Удалить файл', [:destroy_file, :manage, parent, f.object], :method => :delete, :confirm => 'Вы уверены?' %>
  <%= image_tag f.object.file_url, :width => '300', :height => '200', :class => 'preview' if f.object.file_url? %>
<% else %>
  <%= f.input :file %>
<% end %>
<%= f.input :description %>
