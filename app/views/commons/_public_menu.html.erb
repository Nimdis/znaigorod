<div class='main_menu'>
  <%= render_navigation :context => :public, :expand_all => true %>
  <div class='search_form<%= ' selected' if params[:controller] == 'search' %>'>
    <%= form_tag search_path, :method => :get do %>
      <%= text_field_tag 'q', params[:q], placeholder: 'Поиск', class: 'search' %>
      <%= submit_tag('', class: 'submit', name: nil, valule: nil) %>
    <% end %>
  </div>
</div>
