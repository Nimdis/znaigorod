<div class='promo_wrapper'>
  <div class='promo'>
    <%= link_to 'Непрелично дешевые билеты на все развлечения Томска! Купи в 2 клика! Только на сайте znaigorod.ru', tickets_path %>
  </div>
</div>

<div class='header_wrapper'>
  <div class='header'>
    <div class='logo'><a href='/'><%= t('meta.default.title') %></a></div>
    <div class='tomsk'><a href='/'>Томск</a></div>
    <div class='dashboard'>
      <% if user_signed_in? %>
        <p class='user'>
          <%= link_to 'Добавить афишу', new_my_afisha_path, class: :new_my_afisha %>
          <%= link_to(image_tag(current_user.avatar, size: '22x22'), current_user.profile, target: :_blank, class: :avatar) %>
          <%= link_to(current_user.name, current_user.account, class: :user_name) %>
          <%= link_to('Выйти', destroy_user_session_path, method: :delete, class: :logout) %>
        </p>
        <p class='private'><%= link_to('Личный кабинет', my_root_path) %></p>
        <p class='messages'>
          <% if current_user.account.messages.with_state(:new).any? %>
            <%= link_to current_user.account.messages.with_state(:new).count, account_messages_path(current_user.account), class: :new, title: 'Есть новые соощения' %>
          <% else %>
            <%= link_to current_user.account.messages.count, account_messages_path(current_user.account), class: :empty, title: 'Нет новых соощений' %>
          <% end %>
        </p>
      <% else %>
        <%= link_to 'Добавить афишу', new_my_afisha_path, class: :new_my_afisha %>
        <%= render :partial => 'commons/social_auth' %>
      <% end %>
    </div>
    <%= render :partial => "commons/public_menu" %>
  </div>
</div>

<%= render :partial => 'filters' %>
