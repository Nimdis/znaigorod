<div class='promo_wrapper'>
  <div class='promo'>
    <%= link_to 'Непрелично дешевые билеты на все развлечения Томска! Купи в 2 клика! Только на сайте znaigorod.ru', tickets_path %>
  </div>
</div>

<div class='header_wrapper'>
  <div class='header'>
    <div class='logo'>
      <a href='/'><%= t('meta.default.title') %></a>
    </div>
    <div class='tomsk'>
      <a href='/'>Томск</a>
    </div>
    <div class='dashboard'>
      <% if user_signed_in? %>
        <p>
          <%= image_tag current_user.avatar %>
          <%= link_to current_user.name, current_user.profile, target: :_blank %>
          <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: :logout %>
        </p>
        <p><%= link_to 'Личный кабинет', my_root_path %></p>
      <% else %>
        <%= render :partial => 'commons/social_auth' %>
      <% end %>
    </div>
    <div class='main_menu'>
    </div>
  </div>
</div>
