<div class="content_wrapper">
  <%= render :partial => 'filters' %>
  <div class="affiches_list">
    <div class="list_settings">
      <div class="presentation">
      </div>
      <div class="sort affiches">
        <p>Сортировка:</p>
        <ul>
          <li>
            <%= link_to t('affiche.sort.popular'),
              affiches_path(@presenter.searcher_params.merge(order_by: 'popularity')),
              @presenter.order_by_popularity? ? { class: 'selected' } : {} %>
          </li>
          <li>
            <%= link_to t('affiche.sort.closest'),
              affiches_path(@presenter.searcher_params.merge(order_by: 'nearness')),
              @presenter.order_by_popularity? ? {} : { class: 'selected' } %>
          </li>
        </ul>
      </div>
    </div>

    <% if @presenter.collection.any? %>
      <ul class="items_list list">
        <%= render :partial => 'affiche_list' %>
      </ul>
    <% else %>
      <p class="empty_items_list">По заданным параметрам ничего не найдено ;(</p>
    <% end %>
  </div>
</div>

<%= paginate @presenter.paginated_collection %>
