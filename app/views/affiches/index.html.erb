<div class="content_wrapper">
  <%= render :partial => 'filters' %>

  <div class="list_settings">
    <div class="presentation">
    </div>
    <div class="sort affiches">
      <p>Сортировка:</p>
      <ul>
        <%= @presenter.sort_links %>
      </ul>
    </div>
  </div>

  <% if @presenter.collection.any? %>
    <ul class='affiche_list'>
      <% @presenter.collection.each do |showing| %>
        <li><%= showing.affiche.title %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="empty_items_list">По заданным параметрам ничего не найдено ;(</p>
  <% end %>
</div>

<%= paginate @presenter.collection %>
