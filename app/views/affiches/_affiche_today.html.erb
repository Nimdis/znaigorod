<div class="main_page_block_wrapper today_in_city_header">
  <div class="main_page_block">
    <%= link_to "Вся афиша Томска", affiches_path, :class => "all_affiches" %>
    <h1><span class="strong">Сегодня</span> в городе</h1>
  </div>
</div>

<div class="main_page_block_wrapper today_in_city_menu">
  <div class="main_page_block">
    <ul>
      <% @showings_presenter.today_affiche_links.each do |link| %>
        <%= content_tag :li, link[:current] ? { class: 'current' } : nil do %>
          <%= link_to affiches_path(link[:query]) do %>
            <%= link[:title] %>
            <span><%= "(#{link[:count]})" %></span>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="main_page_block_wrapper today_in_city_affiche">
  <div class="main_page_block">
    <div class="affiche">
      <% if @showings_presenter.collection.any? %>
        <ul>
          <% @showings_presenter.collection.each do |affiche| %>
            <li>
              <div class="item">
                <%= affiche.has_ribbon %>
                <div class="title"><%= affiche.main_page_link %></div>
                <div class="image"><%= affiche.main_page_poster %></div>
                <div class="place"><%= affiche.main_page_place %></div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="empty_message">
          Похоже сегодня в городе нет <%#= t("affiche.empty.#{@affiche_today.current_link.kind}") %> ;(
        </p>
      <% end %>
    </div>
  </div>
</div>

<div class="main_page_block_wrapper more_in_city">
  <div class="main_page_block">
    <ul>
      <li>
        <%#= link_to "#{t('affiche_periods.today')} (#{@affiche_today.counters[@affiche_today.current_link.kind].today})",
          @affiche_today.affiches_path_with_params(@affiche_today.kind, :today) %>
      </li>
      <li>
        <%#= link_to "#{t('affiche_periods.weekly')} (#{@affiche_today.counters[@affiche_today.current_link.kind].weekly})",
          @affiche_today.affiches_path_with_params(@affiche_today.kind, :week) %>
      </li>
      <li>
        <%#= link_to "#{t('affiche_periods.weekend')} (#{@affiche_today.counters[@affiche_today.current_link.kind].weekend})",
          @affiche_today.affiches_path_with_params(@affiche_today.kind, :weekend) %>
        </li>
        <li>
          <%#= link_to "#{t("affiche_periods.all.#{@affiche_today.current_link.kind}")} (#{@affiche_today.counters[@affiche_today.current_link.kind].all})",
          @affiche_today.affiches_path_with_params(@affiche_today.kind, nil)%>
      </li>
    </ul>
  </div>
</div>
