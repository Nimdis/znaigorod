<% @tickets.each do |ticket| %>
  <li class='<%= cycle 'first', 'second', 'third' %>'>
    <div class='has_items_for_sale'>
      -<%= ticket.discount %>%
    </div>
    <div class='item_wrapper'>
      <div class='image'><%= link_to image_tag_for(ticket_info.affiche.poster_url, 120, 160), ticket_info.affiche %></div>
      <div class='column'>
        <div class='description'><%= link_to ticket.description.truncate(55).gilensize, ticket.affiche, title: ticket.description %></div>
        <div class='place'><%= AfficheDecorator.decorate(ticket.affiche).affiche_place %></div>
        <div class='original_price'><span class='stroke'><%= ticket.original_price.to_i %> р.</span></div>
        <div class='price'><%= ticket.price.to_i %> р.</div>
        <div class='buy_ticket'>
          <div class='ticket_for_sale'><%= t 'copy.for_sale', count: ticket.copies_for_sale.count %></div>
          <%= link_to 'Купить', new_ticket_payment_path(ticket), class: :payment_link %>
        </div>
      </div>
    </div>
  </li>
<% end %>
