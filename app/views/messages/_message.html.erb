<li class="<%= message.state %> ajax_message_status"
  data-counter="<%= current_user.account.messages.with_state(:new).count %>"
  data-messages="<%= current_user.account.messages.count %>">
  <%= render partial: 'afisha_message', locals: { message: message } if message.messageable.is_a?(Afisha) %>
  <%= render partial: 'comment_message', locals: { message: message } if message.messageable.is_a?(Comment) %>
  <%= render partial: 'friend_message', locals: { message: message } if message.messageable.is_a?(Friend) %>
  <%= render partial: 'visit_message', locals: { message: message } if message.messageable.is_a?(Visit) %>
  <%= render partial: 'vote_message', locals: { message: message } if message.messageable.is_a?(Vote) %>

  <%= link_to t('change_message_status'), account_message_change_message_status_path(@account, message), method: :put, remote: true, class: 'change_message_status' %>
</li>
