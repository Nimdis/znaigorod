<% collection.each do |account| %>
  <%= render partial: 'friends/account_friend', locals: { account: account } %>
<% end %>

<div class="pagination">
  <%= link_to '&uarr;'.html_safe, '#', :class => "toggler #{ 'disabled' if collection.first_page? }" %>
  <%= link_to '&darr;'.html_safe, account_buddies_path(@account, :page => collection.current_page + 1), :remote => true, :class => "next_page #{ 'disabled' if collection.last_page? }" %>
</div>
