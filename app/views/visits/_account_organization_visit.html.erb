<div class="item">
  <div class="poster">
    <%= link_to polymorphic_path(visit.visitable) do %>
      <% if visit.visitable.logotype_url? %>
        <%= image_tag(resized_image_url(visit.visitable.logotype_url, 88, 88), size: '88x88', alt: visit.visitable, title: visit.visitable) %>
      <% else %>
        <%= image_tag 'public/stub_poster.png', size: '88x88' %>
      <% end %>
    <% end %>
  </div>
  <div class="title">
    <%= link_to visit.visitable.title, polymorphic_path(visit.visitable) %>
  </div>
  <% if visit.inviting? && visit.actual? %>
    <div class="wanted">
      <% if current_user == visit.user %>
        <%= render partial: 'visits/self_invite_links', locals: { visit: visit } %>
      <% else %>
        <%= render partial: 'visits/invite_links', locals: { visit: visit } %>
      <% end %>
    </div>
  <% end %>
</div>
