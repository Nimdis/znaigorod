<div class='form_view'>
  <%= simple_form_for [:crm, resource], html: { novalidate: true }  do |f| %>
    <%= hidden_field_tag :field, params[:field] %>
    <%= render partial: "#{params[:field]}_field", locals: { f: f } %>


    <div class="actions">
      <%= f.button :submit, 'Сохранить', class: 'button submit' %>
      <%= link_to 'Отмена', '#', class: 'button cancel' %>
    </div>
  <% end %>
</div>
