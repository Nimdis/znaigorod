<% if voteable.votes.liked.any? %>
  <div class="votes_counter" title='<%= t :like, :count => voteable.votes.count %>'>
    <%= voteable.votes.liked.count %>
  </div>
<% end %>

<% if !voteable.is_a?(Comment) || current_user != voteable.user %>
  <div class="user_like">
    <% if current_user && current_user.liked?(voteable) %>
      <span>Вам это нравится.</span> <%= link_to "Мне не нравится",
                                    polymorphic_url([voteable, :change_vote], :subdomain => request.subdomain), :method => :put, :remote => true %>
    <% else %>
      <%= link_to "Мне нравится", polymorphic_url([voteable, :change_vote]), :method => :put, :remote => true %>
    <% end %>
  </div>
  <% if @vote && @vote.errors.any? %>
    <div class="cloud_wrapper">
      <div class="cloud_inner_wrapper">
        <h4>Оценивать могут только зарегистрированные пользователи. Пожалуйста, войдите с помощью одной из социальных сетей:</h4>
        <%= render :partial => 'commons/social_auth' %>
      </div>
    </div>
  <% end %>
<% end %>
