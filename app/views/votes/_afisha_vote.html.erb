<div class="item">
  <div class="poster">
    <%= link_to afisha_show_path(vote.voteable) do %>
    <% if vote.voteable.poster_url? %>
      <%= image_tag(resized_image_url(vote.voteable.poster_url, 65, 88), size: '65x88', alt: vote.voteable, title: vote.voteable) %>
    <% else %>
      <%= image_tag 'public/stub_poster.png', size: '65x88' %>
    <% end %>
  <% end %>
  </div>
  <div class="title">
    <%= link_to truncate(vote.voteable.title, lenght: 25), afisha_show_path(vote.voteable) %>
  </div>
  <div class="kind">
    <%= vote.voteable.kind.map(&:text).join(', ') %>
  </div>
</div>
