<div class="content_wrapper">
  <%= render :partial => 'filters' %>
  <div class="organizations_list">
    <div class="list_settings">
      <div class="sort affiches">
        <p>Сортировка:</p>
        <ul>
          <li>
            <%#= link_to t('affiche.sort.popular'),
              affiches_path(@showings_presenter.searcher_params.merge(order_by: 'popularity')),
              @showings_presenter.order_by_popularity? ? { class: 'selected' } : {} %>
          </li>
          <li>
            <%#= link_to t('affiche.sort.closest'),
              affiches_path(@showings_presenter.searcher_params.merge(order_by: 'nearness')),
              @showings_presenter.order_by_popularity? ? {} : { class: 'selected' } %>
          </li>
        </ul>
      </div>
    </div>

    <% if @entertainments_presenter.collection.any? %>
      <ul class="items_list <%#= @showings_presenter.view %>">
        <%= render :partial => "organizations/organizations_list" %>
      </ul>
    <% else %>
      <p class="empty_items_list">По заданным параметрам ничего не найдено ;(</p>
    <% end %>
  </div>
</div>

<%= paginate @entertainments_presenter.paginated_collection %>
