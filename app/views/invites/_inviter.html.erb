<div class='left'>
  <%= render 'invites/inviter_form' %>
</div>

<div class='right'>
  <div class='search_form'>
    <%= form_tag accounts_search_path, :method => :get do %>
      <%= text_field_tag :q, params[:q], :placeholder => 'Найти...' %>
      <%= submit_tag 'Найти', :class => :submit %>
    <% end %>
  </div>

  <ul class='filter'>
    <%= link_to "Все участники (#{Account.count})", accounts_search_path(:q => params[:q]) %>
    <%= link_to "Мои друзья (#{current_user.account.friends.count})", accounts_search_path(:only_friends => true, :q => params[:q]) %>
  </div>
  <%= render partial: 'accounts/list' %>
</div>
