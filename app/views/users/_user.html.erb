<div class="avatar">
  <% if user.avatar.present? %>
    <%= image_tag user.avatar, size: '50x50' %>
  <% else %>
    <%= image_tag 'public/stub_poster.png', size: '50x50' %>
  <% end %>
</div>
<div class="info">
  <div class="login">
    <%= link_to user, user %>
  </div>
  <div class="join">
    <%= time_ago_in_words(user.created_at) %> на сайте
  </div>
  <div class="activities">
    <span class="comment">
      <%= t :user_comments, :count => user.comments.count %>
    </span>
    <span class="vote">
      <%= t :user_votes, :count => user.votes.count %>
    </span>
    <span class="visit">
      <%= t :user_visits, :count => user.visits.count %>
    </span>
  </div>
</div>
