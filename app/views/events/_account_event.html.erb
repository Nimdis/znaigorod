<li>
  <div class="item">
    <div class="poster">
      <% if event.poster_url? %>
        <%= image_tag(resized_image_url(event.poster_url, 65, 88), size: '65x88') %>
      <% else %>
        <%= image_tag 'public/stub_poster.png', size: '65x88' %>
      <% end %>
    </div>
    <div class="title">
      <%= link_to event.title, afisha_show_path(event) %>
    </div>
    <div class="kind">
      <%= event.kind.map(&:text).join(', ') %>
    </div>
  </div>
</li>
