<ul>
  <% collection.each do |event| %>
    <%= render partial: 'events/account_event', locals: { event: event } %>
  <% end %>
</ul>

<div class="pagination">
  <%= link_to '&uarr;'.html_safe, '#', :class => "toggler #{ 'disabled' if collection.first_page? }" %>
  <%= link_to '&darr;'.html_safe, account_events_path(@account, by_state: state, :page => collection.current_page + 1), :remote => true, :class => "next_page #{ 'disabled' if collection.last_page? }" %>
</div>
